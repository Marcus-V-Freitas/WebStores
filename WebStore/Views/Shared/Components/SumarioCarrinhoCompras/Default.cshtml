@model CarrinhoComprasViewModel

@if (Model.CarrinhoCompras.ItensCarrinho.Count > 0)
{
    <li>
        <a asp-controller="CarrinhoCompras" asp-action="Index">
            <span class="glyphicon glyphicon-shopping-cart"></span>
            <span id="cart-status">
                @Model.CarrinhoCompras.ItensCarrinho.Count
            </span>
        </a>
    </li>
}