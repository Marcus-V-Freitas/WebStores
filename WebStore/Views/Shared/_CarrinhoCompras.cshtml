@model Produto


<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ImageThumbnailUrl" alt="image for candy shop" />

        <div class="caption">
            <h3 class="pull-right">@Model.Preço.ToString("c")</h3>
            <h3><a asp-controller="Produto" asp-action="Detalhes" asp-route-Id="@Model.ID">@Model.Nome</a> </h3>
            <p>@Model.Descricao</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="CarrinhoCompras" asp-action="AdicionarNoCarrinho"
                   asp-route-Id="@Model.ID">Add To Cart</a>
            </p>
        </div>
    </div>
</div>